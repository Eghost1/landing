# .htaccess para optimización SEO de Nubira

# Habilitar compresión GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Asegurar que Apache sirva index.html como DirectoryIndex (permite rutas tipo /nosotros -> /nosotros/index.html)
DirectoryIndex index.html

# Cache de archivos estáticos
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# ==================================================
# REDIRECCIONES SEO Y DEEP LINKS
# ==================================================
RewriteEngine On

# Redirecciones explícitas para evitar que .html aparezca en la barra de direcciones
# Fuerzan 301 para solicitudes antiguas que aún usan *.html
RedirectMatch 301 ^/index\.html$ /
RedirectMatch 301 ^/nosotros\.html$ /nosotros
RedirectMatch 301 ^/gracias\.html$ /gracias
RedirectMatch 301 ^/404\.html$ /pagina-no-encontrada
RedirectMatch 301 ^/500\.html$ /error-interno

# ==================================================
# UNIVERSAL LINKS - Mantener acceso directo a .well-known
# ==================================================
# Asegurar que .well-known sea accesible (debe ir PRIMERO)
RewriteRule ^\.well-known/ - [L]

# Servir versiones 'limpias' de las páginas de error (slugs descriptivos)
RewriteRule ^pagina-no-encontrada$ /404.html [L]
RewriteRule ^error-interno$ /500.html [L]

# Compatibilidad: redirigir rutas antiguas /404 y /500 a los nuevos slugs
RewriteRule ^404$ /pagina-no-encontrada [R=301,L]
RewriteRule ^500$ /error-interno [R=301,L]

# ==================================================
# FORZAR HTTPS Y WWW
# ==================================================
# Forzar HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Forzar WWW (opcional - ajustar según preferencia)
RewriteCond %{HTTP_HOST} ^nubiraoficial\.cl [NC]
RewriteRule ^(.*)$ https://www.nubiraoficial.cl/$1 [L,R=301]

# ==================================================
# DEEP LINKS REDIRECTION FIX - CON QUERY PARAMETERS
# ==================================================

# ========== SERVICIOS ==========

# Redirigir /servicio/?id=123 a /pages/servicio/?id=123 (CON query string)
RewriteCond %{REQUEST_URI} ^/servicio/?$
RewriteCond %{QUERY_STRING} id=([0-9]+)
RewriteRule ^servicio/?$ /pages/servicio/?id=%1 [R=301,L,QSA]

# Redirigir /servicio/123.html a /pages/servicio/?id=123
RewriteRule ^servicio/([0-9]+)\.html$ /pages/servicio/?id=$1 [R=301,L,QSA]

# Redirigir /servicio/123 (sin extensión) a /pages/servicio/?id=123
RewriteRule ^servicio/([0-9]+)$ /pages/servicio/?id=$1 [R=301,L,QSA]

# Redirigir /servicio/ y /servicio/index.html a /pages/servicio/
RewriteRule ^servicio/?$ /pages/servicio/ [R=301,L]
RewriteRule ^servicio/index\.html$ /pages/servicio/index.html [R=301,L]

# ========== TRABAJADORES ==========

# Redirigir /trabajador/?id=123 a /pages/trabajador/?id=123 (CON query string)
RewriteCond %{REQUEST_URI} ^/trabajador/?$
RewriteCond %{QUERY_STRING} id=([0-9]+)
RewriteRule ^trabajador/?$ /pages/trabajador/?id=%1 [R=301,L,QSA]

# Redirigir /trabajador/123.html a /pages/trabajador/?id=123
RewriteRule ^trabajador/([0-9]+)\.html$ /pages/trabajador/?id=$1 [R=301,L,QSA]

# Redirigir /trabajador/123 (sin extensión) a /pages/trabajador/?id=123
RewriteRule ^trabajador/([0-9]+)$ /pages/trabajador/?id=$1 [R=301,L,QSA]

# Redirigir /trabajador/ y /trabajador/index.html a /pages/trabajador/
RewriteRule ^trabajador/?$ /pages/trabajador/ [R=301,L]
RewriteRule ^trabajador/index\.html$ /pages/trabajador/index.html [R=301,L]

# ==================================================
# MANEJO DE PÁGINAS EN /pages/
# ==================================================

# Si se accede a /pages/servicio/?id=123, asegurarse de servir index.html
RewriteCond %{REQUEST_URI} ^/pages/servicio/?$
RewriteCond %{QUERY_STRING} id=([0-9]+)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^pages/servicio/?$ /pages/servicio/index.html [L,QSA]

# Si se accede a /pages/trabajador/?id=123, asegurarse de servir index.html
RewriteCond %{REQUEST_URI} ^/pages/trabajador/?$
RewriteCond %{QUERY_STRING} id=([0-9]+)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^pages/trabajador/?$ /pages/trabajador/index.html [L,QSA]

# ==================================================
# REMOVER EXTENSIÓN .HTML DE URLs GENERALES
# ==================================================

# Remover extensión .html de las URLs (DESPUÉS de deep links)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !^/pages/(servicio|trabajador)
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Redireccionar URLs con .html a sin extensión (excepto páginas de deep links)
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteCond %{REQUEST_URI} !^/pages/(servicio|trabajador)
RewriteRule ^ /%1 [NC,L,R=301]

# ==================================================
# REDIRECCIONES ESPECÍFICAS PARA SEO
# ==================================================

Redirect 301 /home /
Redirect 301 /inicio /
Redirect 301 /about /nosotros
Redirect 301 /team /nosotros
Redirect 301 /contact /
Redirect 301 /contacto /

# ==================================================
# HEADERS DE SEGURIDAD
# ==================================================

<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# ==================================================
# UNIVERSAL LINKS - MIME TYPES Y HEADERS
# ==================================================

<IfModule mod_mime.c>
    # Apple App Site Association (sin extensión)
    <FilesMatch "^apple-app-site-association$">
        Header set Content-Type "application/json"
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
    
    # Android Asset Links
    <FilesMatch "^assetlinks\.json$">
        Header set Content-Type "application/json"
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>

# Permitir acceso a archivos .well-known
<IfModule mod_authz_core.c>
    <Directory "/\.well-known">
        Require all granted
    </Directory>
</IfModule>

# Bloquear acceso a archivos sensibles (excepto .well-known)
<FilesMatch "^\.(?!well-known)">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

<Files ~ "(\.htaccess|\.htpasswd|\.ini|\.log|\.sh|\.sql|\.bak)$">
    Order allow,deny
    Deny from all
</Files>

# ==================================================
# OPTIMIZACIÓN DE IMÁGENES
# ==================================================

<IfModule mod_headers.c>
    <FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
        Header set Cache-Control "max-age=31536000, public"
    </FilesMatch>
</IfModule>

# ==================================================
# ERROR PAGES PERSONALIZADAS
# ==================================================

ErrorDocument 404 /pagina-no-encontrada
ErrorDocument 500 /error-interno

# ==================================================
# PREVENIR HOTLINKING DE IMÁGENES
# ==================================================

RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?nubiraoficial\.cl [NC]
RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [F]
